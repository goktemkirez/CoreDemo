@using EntityLayer.Concrete
@model List<AppUser>

@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
    <h1>Kullanıcı Rolleri</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Kullanıcı</th>
                <th>Rol Ata</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td><a href="/Admin/AdminRole/AssignRole/@item.Id/" class="btn btn-outline-secondary">Rol Ata</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Admin/AdminRole/Index/" class="btn btn-outline-primary">Rol Listesine Dön</a>
</html>