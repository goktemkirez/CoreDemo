@using EntityLayer.Concrete
@model List<RelationalMessage>


<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    @foreach (var item in Model)
    {
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="~/WriterImageFiles/@item.SenderUser.WriterImage" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderUser.WriterName sana mesaj gönderdi.</h6>
                <p class="text-gray mb-0"> @(((DateTime)item.MessageDate).ToString("dd.MM.yyyy")) </p>
            </div>
        </a>
    }
    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center">3 Yeni Mesaj</h6>
</div>
